<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txt6"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="Tạo Cover Letter"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />
    <TextView
        app:layout_constraintTop_toBottomOf="@id/txt6"
        android:layout_marginTop="10dp"
        android:id="@+id/txt1"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/ic_baseline_assignment_turned_in_24"
        android:text="Điền thông tin để nhận gợi ý phù hợp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/green"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_marginLeft="15dp"
        android:id="@+id/txt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ngôn ngữ"
        android:textSize="26dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/txt1"/>

    <Spinner
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/sp1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/txt2"
        />

    <TextView
        android:layout_marginLeft="15dp"
        android:id="@+id/txt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ngành Nghề"
        android:textSize="26dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/sp1"/>

    <Spinner
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/sp2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/txt3"
        />

    <TextView
        android:layout_marginLeft="15dp"
        android:id="@+id/txt4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kinh nghiệm"
        android:textSize="26dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/sp2"/>

    <Spinner
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/sp3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/txt4"
        />

    <TextView
        android:layout_marginLeft="15dp"
        android:id="@+id/txt5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhu cầu tìm việc"
        android:textSize="26dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/sp3"/>

    <Spinner
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/sp4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/txt5"
        />

    <Button
        android:text="Bắt đầu"
        android:textColor="@color/white"
        app:backgroundTint="@null"
        android:background="@drawable/botronbutton"
        android:layout_marginTop="210dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        />




</androidx.constraintlayout.widget.ConstraintLayout>